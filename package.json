{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build-ui": "turbo run build --filter=components...",
    "build-web": "turbo run build --filter=web...",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev-ui": "turbo run dev --filter=components...",
    "dev-web": "turbo run dev --filter=web...",
    "storybook": "npm run storybook --prefix packages/components",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "clean-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "format": "prettier --write \"**/*.{ts,tsx,md,css}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=web^... && changeset publish",
    "updated": "npm run format && ts-node scripts/updated.ts packages/components/src"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@uicapsule/config": "^0.0.0",
    "eslint": "^8.47.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.12",
    "typescript": "^4.9.5"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
