{
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build-components": "turbo run build --filter=components...",
    "build-web": "turbo run build --filter=web...",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "dev-components": "turbo run dev --filter=components...",
    "dev-web": "turbo run dev --filter=web...",
    "storybook": "npm run storybook --prefix packages/components",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "clean-node-modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "format": "prettier --write \"**/*.{ts,tsx,md,css}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=web^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@uicapsule/config": "*",
    "eslint": "^8.15.0",
    "prettier": "^2.8.1",
    "turbo": "^1.6.3",
    "typescript": "^4.9.3"
  },
  "overrides": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
