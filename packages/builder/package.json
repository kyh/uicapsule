{
  "name": "@repo/builder",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsx src/index.ts",
    "dev": "pnpm with-env tsx src/index.ts --watch",
    "dev:db": "pnpm with-env tsx src/index.ts --watch --mode db",
    "dev:export": "pnpm with-env tsx src/index.ts --watch --mode export",
    "clean": "git clean -xdf .cache .turbo node_modules",
    "push-remote": "dotenv -e ../../.env.production.local -- tsx src/index.ts --mode db",
    "with-env": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@repo/api": "workspace:*",
    "@repo/db": "workspace:*",
    "chokidar": "^5.0.0"
  },
  "devDependencies": {
    "@kyh/eslint-config": "catalog:",
    "@kyh/prettier-config": "catalog:",
    "@kyh/tsconfig": "catalog:",
    "prettier": "catalog:",
    "tsx": "^4.21.0",
    "typescript": "catalog:"
  },
  "prettier": "@kyh/prettier-config"
}
