{
  "offline_enabled": true,
  "icons": {
    "64": "public/logo-gray-64.png",
    "128": "public/logo-gray-128.png",
    "256": "public/logo-gray-256.png",
    "512": "public/logo-gray-512.png",
    "65": "public/logo-highlight-64.png",
    "129": "public/logo-highlight-128.png",
    "257": "public/logo-highlight-256.png",
    "513": "public/logo-highlight-512.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["*://*/*", "contextMenus"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_icon": "public/logo-gray-128.png"
  }
}
